[user]
	name = Patrick McCarren
	email = patrick@mmsc.io
[credential]
	helper = cache --timeout=3600
[core]
	excludesfile = $HOME/.gitignore
	autocrlf = input
	ignorecase = false
[log]
	decorate = full
[alias]
	a = add
	A = add -A
	p = push
	d = diff
	di = diff
	dc = diff --cached
	po = push origin
	st = status
	co = checkout
	ci = commit
	cim = commit -m
	br = branch
	bra = branch -a
	fl = flow
	flfe = flow feature
	flre = flow release
	flho = flow hotfix
	flsu = flow support
	flve = flow version
	sh = show
	sta = stash
	sub = submodule
	pre = pull --rebase
	up = pull --rebase
	lg = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	logg = log --graph
	tg = tag
	subur = submodule update --recursive
[color]
	ui = true
[push]
	default = simple
[github]
	user = pmccarren
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
